{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "declaration": false,
    "sourceMap": false
  },
  "include": ["src/assets/js/**/*.ts", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "_site", "dist", "**/*.test.ts", "**/*.spec.ts"]
}