<div>
  <h3 id="connect" class="sr-only">Connect: </h3>
  <ul class="btn-list-hz">
  {% if author.email %}
    <li class="link-btn">
      <a aria-label="email" href="mailto:{{ author.email }}" rel="noopener noreferrer" target="_blank">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" fill="currentColor" height="24" viewBox="0 0 24 24">
          <path d="M12 .02c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm6.99 6.98l-6.99 5.666-6.991-5.666h13.981zm.01 10h-14v-8.505l7 5.673 7-5.672v8.504z" />
        </svg>
      </a>
    </li>
  {% endif %}
  {% for item in author.connect %}
    <li class="link-btn">
      <a  aria-label="{{ item.name }}" href="{{ item.url }}" rel="noopener noreferrer" target="_blank">
        {% if item.icon %}
          {{ item.icon | safe }}
        {% endif %}
      </a>
    </li>
  {% endfor %}
  </ul>
</div>
