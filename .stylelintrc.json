{
  "plugins": [
    "stylelint-prettier"
  ],
  "rules": {
    "rule-empty-line-before": [
      "always",
      {
        "except": [
          "first-nested"
        ]
      }
    ],
    "property-no-vendor-prefix": null,
    "max-nesting-depth": [
      3,
      {
        "severity": "warning"
      }
    ],
    "selector-class-pattern": "^[a-z0-9\\-_]+$",
    "selector-max-compound-selectors": [
      3,
      {
        "severity": "warning"
      }
    ],
    "at-rule-empty-line-before": [
      "always",
      {
        "except": [
          "first-nested"
        ],
        "ignoreAtRules": [
          "import"
        ]
      }
    ],
    "at-rule-no-unknown": null,
    "prettier/prettier": [
      true,
      {
        "singleQuote": true,
        "tabWidth": 2
      }
    ]
  }
}
